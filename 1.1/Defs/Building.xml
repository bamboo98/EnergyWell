<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="BuildingBase">
        <defName>SecondaryVoidEnergyWell</defName>
        <label>次级幽能井</label>
        <description>Produces power by consuming chemfuel. Must be periodically refueled by hand.</description>
        <thingClass>Building</thingClass>
        <graphicData>
            <texPath>Build_VoidEnergyWell</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(2,2)</drawSize>
            <shadowData>
                <volume>(1.93,1,1.69)</volume>
                <offset>(-0.03,0,-0.1)</offset>
            </shadowData>
        </graphicData>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>150</pathCost>
        <blockWind>true</blockWind>
        <fillPercent>1.0</fillPercent>
        <rotatable>false</rotatable>
        <statBases>
            <MaxHitPoints>1000</MaxHitPoints>
            <WorkToBuild>1</WorkToBuild>
            <Flammability>0</Flammability>
            <Beauty>0</Beauty>
        </statBases>
        <tickerType>Rare</tickerType>
        <canOverlapZones>false</canOverlapZones>
        <size>(2,2)</size>
        <costList>
            <Steel>100</Steel>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
        <comps>
            <li Class="CompProperties_Flickable" />
            <li Class="CompProperties_Glower">
                <glowRadius>10</glowRadius>
                <glowColor>(131,236,255,0)</glowColor>
            </li>
            <li Class="zhuzi.AdvancedEnergy.EnergyWell.Comp.Prop.EnergyWellProp">
                <!-- 缓存的幽能上限 -->
                <energyStorageMax>500</energyStorageMax>
                <!-- 每秒生产的幽能数量 -->
                <produceEnergyPerSec>0.15</produceEnergyPerSec>
                <!-- 过热速率 -->
                <heatAccumulationRate>2.5</heatAccumulationRate>
            </li>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>1000</basePowerConsumption>
            </li>
        </comps>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
        <designationCategory>Power</designationCategory>
        <constructEffect>ConstructMetal</constructEffect>

    </ThingDef>


